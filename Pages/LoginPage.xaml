             BackgroundColor="#F5F5F5"
             Title="Logi sisse">

    <StackLayout Padding="20" VerticalOptions="Center">
        <Label Text="Logi sisse" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />
        <Entry Placeholder="Kasutajanimi" Margin="0,20,0,0" />
